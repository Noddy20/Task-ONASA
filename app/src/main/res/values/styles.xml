<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- View Click Style-->
    <style name="ClickableWithinBorder">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ClickableBorderLess">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ShapeAppearanceOverlay.Picture.Corner" parent="">
        <item name="cornerSize">@dimen/itemPictureRadius</item>
    </style>

    <style name="AppTheme.BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/colorTransparent</item>
    </style>

</resources>