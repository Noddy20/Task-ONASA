<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorThemePrimary</item>
        <item name="colorPrimaryDark">@color/colorThemePrimaryDark</item>
        <item name="colorAccent">@color/colorThemeAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorThemeBackground</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/BaseAppTheme.ToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.Button.Navigation</item>

        <!-- Actionbar styles -->
        <item name="actionBarTheme">@style/AppTheme.DarkToolbar</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <!--  Theme: DarkToolbar -->
    <style name="AppTheme.DarkToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.ToolbarTitleTextAppearance</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BaseAppTheme.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="maxButtonHeight">@dimen/_48sdp</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="contentInsetStart">@dimen/_16sdp</item>
    </style>

    <style name="AppTheme.ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="AppTheme.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">@dimen/_48sdp</item>
    </style>

</resources>